{
	"name": "Java",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "23",
			"installMaven": "true",
			"installGradle": "false"
		},
		"ghcr.io/devcontainers-extra/features/zsh-plugins:0": {
      		"omzPlugins": ["git", "java", "maven"]
    	}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"vscjava.vscode-java-pack",
				"GitHub.copilot"
			]
		}
	},
	"postCreateCommand": "sudo apt-get update && apt-get install -y git-lfs",
	"remoteUser": "root"
}
